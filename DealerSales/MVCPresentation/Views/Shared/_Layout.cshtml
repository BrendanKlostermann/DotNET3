<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")


</head>
<body>

    <div class="row display-flex">

        <div class="col-lg-1 bgBlack">
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("View All Customers", "CustomerList", "Customer")</li>
                    <li>@Html.ActionLink("View All Vehicles", "VehicleList", "Vehicle")</li>
                    <li>@Html.ActionLink("View Employees", "Index", "Admin")</li>
                    <li>@Html.ActionLink("Sales Records", "Index", "Sale")</li>
                </ul>
            </div>
        </div>

        <div class="col-lg-10">
            <div class="navbar bgBlack navbar-fixed-top">
                <div class="container">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        @Html.ActionLink("Dealership Sales", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                    </div>
                    @Html.Partial("_LoginPartial")
                </div>
            </div>

            <div class="container body-content">
                    @RenderBody()              
                <hr />
                <footer>
                    <p>&copy; @DateTime.Now.Year - Dealership Sales</p>
                </footer>
            </div>

        </div>
        <div class="col-lg-1 bgBlack">

        </div>

    </div>
    
    


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    @Styles.Render("~/Content/LayoutStyle.css")
</body>
</html>
